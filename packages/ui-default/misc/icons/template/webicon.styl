@font-face
  font-family: $icon-font-name
  src: url('./hydro-icons.eot')
  src: url('./hydro-icons.eot#iefix') format('embedded-opentype'),
    url('./hydro-icons.woff2') format('woff2'),
    url('./hydro-icons.woff') format('woff'),
    url('./hydro-icons.ttf') format('truetype')
  font-weight: normal
  font-style: normal

.icon
  font-family: $icon-font-name !important;{{fontSize}}
  speak: none
  font-style: normal
  font-weight: normal
  font-variant: normal
  text-transform: none
  line-height: 1
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

